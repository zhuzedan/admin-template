<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zzd.mapper.SystemLoginLogMapper">

    <resultMap id="systemLoginLogMap" type="com.zzd.domain.SystemLoginLog" autoMapping="true">
    </resultMap>

    <!-- 用于select查询公用抽取的列 -->
    <sql id="columns">
        id,username,ipaddr,status,msg,access_time,create_time,update_time,is_deleted
    </sql>

    <sql id="findPageWhere">
        <where>
            <if test="vo.username != null and vo.username != ''">
                and username like CONCAT('%',#{vo.username},'%')
            </if>
            <if test="vo.createTimeBegin != null and vo.createTimeBegin != ''">
                and create_time >= #{vo.createTimeBegin}
            </if>
            <if test="vo.createTimeEnd != null and vo.createTimeEnd != ''">
                and create_time &lt;= #{vo.createTimeEnd}
            </if>
            and is_deleted = 0
        </where>
    </sql>

    <select id="selectPage" resultMap="systemLoginLogMap">
        select <include refid="columns" />
        from t_system_login_log
        <include refid="findPageWhere"/>
        order by id desc
    </select>

</mapper>